<table>
    <thead>
        <tr>
            <td class="payment-table-border date">日付</td>
            <td class="payment-table-border price">価格</td>
            <td class="payment-table-border title">タイトル</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PaymentList)
        {
            <tr>
                <td class="payment-table-border">@item.Date.ToString("yyyy/MM/dd")</td>
                <td class="payment-table-border">@item.Price.ToString("#,##0") 円</td>
                <td class="payment-table-border">@item.Title</td>
            </tr>
        }
    </tbody>
</table>





