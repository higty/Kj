<Window x:Class="MultiThreadWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiThreadWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Start" Name="StartButton" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="34" Width="95" Click="StartButton_Click"/>
        <TextBox x:Name="LogTextbox"
            HorizontalAlignment="Center" Margin="0,49,0,0" 
                 AcceptsReturn="True"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="780" Height="375"/>

    </Grid>
</Window>
